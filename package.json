{
  "name": "intro-to-creative-coding",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:assets && npm run build:js && npm run build:sass",
    "build:js": "browserify -t [ babelify --global ] src/js/index.js -o dist/js/app.js",
    "build:sass": "node-sass --include-path=$(node bin/sass-paths.js) src/sass/style.sass dist/css/style.css",
    "build:assets": "node bin/move-assets.js",
    "watch": "npm run watch:js & npm run watch:sass & npm run watch:assets & npm run livereload",
    "watch:js": "watchify -p [browserify-hmr browserify-hmr -h 0.0.0.0 -p 3122 -u http://localhost:3122] -t [ babelify --global ] src/js/index.js -o dist/js/app.js --debug",
    "watch:sass": "nodemon -w src/sass -e sass -x 'npm run build:sass'",
    "watch:assets": "nodemon -e jpg,jpeg,gif,png,json,md,svg,flac,ogg --watch src/assets --exec 'npm run build:assets'",
    "livereload": "livereload dist/**/*.css,dist/**/*.md -e md -d -p 35730",
    "start": "npm run watch & serve --path dist --port 8081"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bourbon": "^4.2.7",
    "bourbon-neat": "^1.8.0",
    "code-prettify": "github:alex-milanov/code-prettify",
    "d3": "^5.7.0",
    "firacode": "^1.205.0",
    "font-awesome": "^4.7.0",
    "iblokz-data": "^1.2.0",
    "iblokz-snabbdom-helpers": "^1.2.0",
    "marked": "^0.3.6",
    "mermaid": "^8.2.3",
    "raf": "^3.4.0",
    "raf-stream": "^3.0.0",
    "rx": "^4.1.0",
    "rx-node": "^1.0.2",
    "superagent": "^3.3.1",
    "three": "^0.97.0",
    "vm-browserify": "0.0.4"
  },
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-3": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "browserify-hmr": "^0.3.5",
    "eslint": "^3.12.2",
    "eslint-config-google": "^0.6.0",
    "fs-extra": "^1.0.0",
    "livereload": "^0.6.0",
    "node-sass": "^4.1.1",
    "node-serve": "0.0.3",
    "nodemon": "^1.11.0",
    "watchify": "^3.8.0"
  }
}
